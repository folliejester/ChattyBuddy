<Window x:Class="ChattyBuddy.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChattyBuddy - Select Tailscale device"
        Height="220"
        Width="420"
        Icon="/Assets/AppIcon.ico"
        WindowStartupLocation="CenterScreen"
        Loaded="MainWindow_OnLoaded"
        Foreground="{DynamicResource ChatTextForegroundBrush}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Pick the Tailscale device to chat with:"
                   FontWeight="Bold"
                   Margin="0,0,0,8" />

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal">
            <ComboBox Width="260"
                      ItemsSource="{Binding Devices}"
                      SelectedItem="{Binding SelectedDevice}"
                      Margin="0,0,8,0"
                      Background="{DynamicResource ChatControlBackgroundBrush}"
                      Foreground="{DynamicResource ChatTextForegroundBrush}"
                      BorderBrush="{DynamicResource ChatBorderBrush}">
                <ComboBox.ItemContainerStyle>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Background" Value="{DynamicResource ChatControlBackgroundBrush}" />
                        <Setter Property="Foreground" Value="{DynamicResource ChatTextForegroundBrush}" />
                        <Setter Property="Padding" Value="4,2" />
                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ChatBorderBrush}" />
                                <Setter Property="Foreground" Value="{DynamicResource ChatTextForegroundBrush}" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ChatBorderBrush}" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ComboBox.ItemContainerStyle>
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="10"
                                     Height="10"
                                     Margin="0,0,4,0">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="Red" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Online}" Value="True">
                                                <Setter Property="Fill" Value="LimeGreen" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock Text="{Binding Name}"
                                       Foreground="{DynamicResource ChatTextForegroundBrush}" />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Button Content="Refresh"
                    Width="80"
                    Command="{Binding RefreshCommand}" />
        </StackPanel>

        <TextBlock Grid.Row="2"
                   Margin="0,8,0,8"
                   Text="{Binding StatusMessage}" />

        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
            HorizontalAlignment="Right">
            <Button Content="Connect"
                    Width="90"
                    IsDefault="True"
                    Command="{Binding ConnectCommand}" />
        </StackPanel>
    </Grid>
</Window>
