<Window x:Class="ChattyBuddy.Wpf.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChattyBuddy"
        Width="320"
        Height="260"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        ShowInTaskbar="False"
        Topmost="True"
        WindowStartupLocation="Manual"
        Loaded="ChatWindow_OnLoaded"
        Background="{DynamicResource ChatBackgroundBrush}">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <Style x:Key="RoundButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ChatButtonBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource ChatButtonForegroundBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource ChatBorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Width" Value="28" />
            <Setter Property="Height" Value="28" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="14"
                                Width="{TemplateBinding Width}"
                                Height="{TemplateBinding Height}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer x:Name="MessagesScrollViewer"
                      Grid.Row="0"
                      Margin="0,0,0,6"
                      Background="{DynamicResource ChatScrollBackgroundBrush}"
                      VerticalScrollBarVisibility="Visible">
            <ScrollViewer.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Clear chat"
                              Click="ClearChatMenuItem_Click" />
                </ContextMenu>
            </ScrollViewer.ContextMenu>

            <ScrollViewer.Resources>
                <Style TargetType="ScrollBar">
                    <Setter Property="Width" Value="8" />
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ScrollBar">
                                <Grid Background="{TemplateBinding Background}">
                                    <Track Name="PART_Track" IsDirectionReversed="true">
                                        <Track.DecreaseRepeatButton>
                                            <RepeatButton Command="ScrollBar.LineUpCommand" Opacity="0" />
                                        </Track.DecreaseRepeatButton>
                                        <Track.Thumb>
                                            <Thumb Background="{DynamicResource ChatSubtleTextForegroundBrush}" Width="8" />
                                        </Track.Thumb>
                                        <Track.IncreaseRepeatButton>
                                            <RepeatButton Command="ScrollBar.LineDownCommand" Opacity="0" />
                                        </Track.IncreaseRepeatButton>
                                    </Track>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
                <Style TargetType="Thumb">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Thumb">
                                <Border CornerRadius="4" Background="{TemplateBinding Background}" />
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ScrollViewer.Resources>

            <ItemsControl ItemsSource="{Binding Messages}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="4,4,0,4">
                            <Border Padding="6"
                                    CornerRadius="6"
                                    MaxWidth="220">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="HorizontalAlignment" Value="Left" />
                                        <Setter Property="Background" Value="{DynamicResource ChatReceivedBubbleBrush}" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsOwn}" Value="True">
                                                <Setter Property="HorizontalAlignment" Value="Right" />
                                                <Setter Property="Background" Value="{DynamicResource ChatOwnBubbleBrush}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <StackPanel>
                                    <TextBlock Text="{Binding Text}"
                                               TextWrapping="Wrap">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontStyle" Value="Normal" />
                                                <Setter Property="Foreground" Value="{DynamicResource ChatTextForegroundBrush}" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsTyping}" Value="True">
                                                        <Setter Property="FontStyle" Value="Italic" />
                                                        <Setter Property="Foreground" Value="{DynamicResource ChatSubtleTextForegroundBrush}" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Right">
                                        <TextBlock Text="{Binding Timestamp, StringFormat='t'}"
                                                   FontSize="10"
                                                   Foreground="{DynamicResource ChatSubtleTextForegroundBrush}"
                                                   Margin="0,0,4,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsTyping}" Value="True">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock FontSize="10"
                                                   Foreground="{DynamicResource ChatSubtleTextForegroundBrush}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                    <Setter Property="Text" Value="" />
                                                    <Style.Triggers>
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding IsOwn}" Value="True" />
                                                                <Condition Binding="{Binding IsTyping}" Value="False" />
                                                            </MultiDataTrigger.Conditions>
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </MultiDataTrigger>
                                                        <DataTrigger Binding="{Binding IsDelivered}" Value="True">
                                                            <Setter Property="Text" Value="âœ“âœ“" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsDelivered}" Value="False">
                                                            <Setter Property="Text" Value="âœ“" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <DockPanel Grid.Row="1">
            <Button x:Name="ActionButton"
                    DockPanel.Dock="Right"
                    Style="{StaticResource RoundButtonStyle}"
                    Click="ActionButton_Click">
                <TextBlock Text="ðŸ””"
                           FontSize="12"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" />
            </Button>

            <Border Margin="0,0,6,0"
                    Background="{DynamicResource ChatControlBackgroundBrush}"
                    BorderBrush="{DynamicResource ChatBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="18"
                    Padding="4"
                    VerticalAlignment="Center"
                    MinHeight="28">
                <TextBox x:Name="MessageTextBox"
                         Text="{Binding OutgoingText, UpdateSourceTrigger=PropertyChanged}"
                         Background="Transparent"
                         BorderThickness="0"
                         Foreground="{DynamicResource ChatTextForegroundBrush}"
                         CaretBrush="{DynamicResource ChatTextForegroundBrush}"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         MinLines="1"
                         MaxLines="3"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         VerticalContentAlignment="Center"
                         PreviewKeyDown="MessageTextBox_OnPreviewKeyDown"
                         TextChanged="MessageTextBox_OnTextChanged" />
            </Border>
        </DockPanel>
    </Grid>
</Window>
